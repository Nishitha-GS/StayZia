<% layout("/layout/boilerplate") %>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="row">
            <div class="col-8 offset-2 mt-3">
                <h1>Edit details</h1>
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
        <div class="invalid-feedback">Title is needed</div>
        <div class="valid-feedback">Title looks good!</div>
        </div>

        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" name="listing[description]"class="form-control" required > <%= listing.description %></textarea>
        <div class="invalid-feedback">Description is needed</div>
        <div class="valid-feedback">Looks good!</div>
        </div>

        <% if(listing.image && listing.image.url){ %>
            <div class="mb-3">
             <label>Current Image:</label><br>
                <img src="<%= originalImageUrl %>" alt="Listing image">
            </div>
        <% } %>
        <div class="mb-3">
        <label for="image" class="form-label">upload image link</label>
        <input type="file" name="listing[image]" class="form-control" >
        
        <div class="row">
             <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input type="text" name="listing[price]" value="<%= listing.price%>" class="form-control" required>
                <div class="invalid-feedback">Price should be valid "Number"</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            
            <div class="mb-3 col-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" value="<%= listing.location%>" class="form-control" required>
                <div class="invalid-feedback">Location should be valid</div>  
                <div class="valid-feedback">Looks good!</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="Country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
            <div class="invalid-feedback">Country should be valid</div>   
            <div class="valid-feedback">Looks good!</div>
        </div>

                <div class="mb-3 ">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" id="category" name="listing[category]" class="form-control">
                    <option value="Mountains"  <%= listing.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
                    <option value="Castles" <%= listing.category === 'Castles' ? 'selected' : '' %>>Castles</option>
                    <option value="Arctic" <%= listing.category === 'Arctic' ? 'selected' : '' %>>Arctic</option>
                    <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>Camping</option>
                    <option value="Farms" <%= listing.category === 'Farms' ? 'selected' : '' %>>Farms</option>
                    <option value="Rooms" <%= listing.category === 'Rooms' ? 'selected' : '' %>>Rooms</option>
                    <option value="Iconic cities" <%= listing.category === 'Iconic cities' ? 'selected' : '' %>>Iconic cities</option>
                    <option value="Swimming" <%= listing.category === 'Swimming' ? 'selected' : '' %>>Swimming</option>
                </select>
                </div>
  

        <button class="btn btn-dark edit-btn mt-3 ">Save changes</button>
        <br><br>
        </div>
        </div>
    </form>
